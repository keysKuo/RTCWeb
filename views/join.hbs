<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

<body
    class="d-flex flex-column justify-content-center align-items-center gap-3"
  >
    <form method="POST" action="/join" style="width: 360px">
      <h1 class="text-center mb-3 fs-3 fw-bolder">
        <a href="" class="text-decoration-none">WebRTC</a>
      </h1>
      <div class="mb-3">
        <label for="inputId" class="form-label"
          >Meeting ID or Personal Link Name</label
        >
        <input
          type="text"
          class="form-control"
          name="roomId"
          placeholder="Enter your meeting ID or Personal Link Name"
        />
      </div>
      <div class="mb-3">
        <label for="inputNamee" class="form-label">Name</label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="inputName"
          placeholder="Enter your name"
        />
      </div>
      {{#if msg}}
            <div class="text-center alert alert-danger">{{msg}}</div>
          {{/if}}
      <button type="submit" class="w-100 btn btn-primary">Join</button>
    </form>
    <a href="/create" class="text-decoration-none"> Create a new meeting </a>
    <!-- JavaScript Bundle with Popper -->
  </body>